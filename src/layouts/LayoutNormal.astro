---
import Base from './Base.astro';
import Link from '../components/Link.astro';
import Header from './Header.astro';
import Footer from './Footer.astro';

export interface Props {
    title?: string;
}

const { title } = Astro.props as Props;

const description = '';
const icon = '';
const site = 'Attituding';
const titleMeta = title ? `${title} - ${site}` : site;
---

<Base
    description={description}
    icon={icon}
    titleMeta={titleMeta}
>
    <script>
        import '../scripts/anchors.js';
    </script>
    <Header
        icon={icon}
        site={site}
    >
        <Link
            href="/projects"
            label="Projects"
            target="_self"
        />
        <Link
            href="https://github.com/attituding"
            label="GitHub"
        />
        <Link
            href="https://www.youtube.com/channel/UCyI7JXj02uBCPprhTREtRsQ"
            label="YouTube"
        />
        <Link
            href="mailto:attituding@outlook.com"
            label="Contact"
        />
    </Header>
    <div class="flex flex-grow justify-center">
        <main class="h5 flex w-[80rem] max-w-[80rem] flex-col gap-8 p-4 sm:gap-12 sm:p-12">
            <slot />
        </main>
    </div>
    <Footer
        author="Attituding"
        authorHref="https://attituding.xyz"
        icon={icon}
    />
</Base>
