---
import AutoGrid from '../components/AutoGrid.astro';
import Block from '../components/Block.astro';
import Project from '../components/Project.astro';
import Text from '../components/Text.astro';
import Title from '../components/Title.astro';
import LayoutNormal from '../layouts/LayoutNormal.astro';
---

<LayoutNormal title="Projects">
    <Block>
        <Title
            heading="1"
            title="Projects"
        />
        <Text>Check out the random and sometimes cool stuff I have made</Text>
    </Block>
    <Block>
        <Title
            heading="2"
            title="Cool Projects"
        />
        <AutoGrid
            desktopGap="sm:gap-8"
            desktopGrid="sm:grid-cols-[repeat(auto-fit,minmax(20rem,1fr))]"
            mobileGap="gap-4"
            mobileGrid="grid-cols-[repeat(auto-fit,minmax(16rem,1fr))]"
        >
            <Project
                description="Hypixel News is a Discord bot that sends you the latest general, moderation, and SkyBlock news from the Hypixel Network"
                github="https://github.com/attituding/hypixel-news"
                home="https://hypixelnews.attituding.xyz"
                icon="/hypixel-news.svg"
                iconAlt="Hypixel News icon"
                name="Hypixel News"
            />
            <Project
                chrome="https://chrome.google.com/webstore/detail/iris/eoimknngdbibmlhfkkfdjiaonaelahgo"
                description="Iris is a Firefox and Chromium browser extension that checks any Hypixel player's last session easily and quickly"
                firefox="https://addons.mozilla.org/en-CA/firefox/addon/iris"
                github="https://github.com/attituding/iris"
                home="https://hypixel.net/threads/browser-extension-iris-a-unique-take-on-a-session-checker.4572237/"
                icon="/iris.svg"
                iconAlt="Iris icon"
                name="Iris"
            />
            <Project
                description="NotifHy is a Discord bot that allows you to share logins with friends and get reminders to claim daily rewards"
                github="https://github.com/attituding/notifhy"
                home="https://notifhy.attituding.xyz"
                icon="/notifhy.svg"
                iconAlt="NotifHy icon"
                name="NotifHy"
            />
            <Project
                chrome="https://chrome.google.com/webstore/detail/shorts-deflector/gilmponliddppjjcfjmanmmfgiilikhg"
                description="Shorts Deflector is a Chromium and Firefox browser extension that lets you seamlessly play YouTube Shorts with the normal desktop interface"
                firefox="https://addons.mozilla.org/en-CA/firefox/addon/shorts-deflector"
                github="https://github.com/attituding/shorts-deflector"
                home="https://shortsdeflector.attituding.xyz"
                icon="/shorts-deflector.svg"
                iconAlt="Shorts Deflector icon"
                name="Shorts Deflector"
            />
        </AutoGrid>
    </Block>
    <Block>
        <Title
            heading="2"
            title="Other Projects"
        />
        <AutoGrid
            desktopGap="sm:gap-8"
            desktopGrid="sm:grid-cols-[repeat(auto-fit,minmax(20rem,1fr))]"
            mobileGap="gap-4"
            mobileGrid="grid-cols-[repeat(auto-fit,minmax(14rem,1fr))]"
        >
            <Project
                description="An ad blocker built on Cloudflare's Zero Trust system"
                github="https://github.com/attituding/cloudflare-zero-trust-ad-block"
                name="Cloudflare Ad Block"
            />
            <Project
                description="A serverless Discord Bot designed for Cloudflare Workers"
                github="https://github.com/attituding/serverless-discord-bot"
                name="Serverless Discord Bot"
            />
        </AutoGrid>
    </Block>
    <Block>
        <Title
            heading="2"
            title="Archived Projects"
        />
        <AutoGrid
            desktopGap="sm:gap-8"
            desktopGrid="sm:grid-cols-[repeat(auto-fit,minmax(20rem,1fr))]"
            mobileGap="gap-4"
            mobileGrid="grid-cols-[repeat(auto-fit,minmax(14rem,1fr))]"
        >
            <Project
                description="A scuffed implementation of 2048 built in 2 days"
                github="https://github.com/attituding/2048"
                name="2048"
            />
            <Project
                description="An application built around the discord-rpc library to provide custom status message(s) for any desktop Discord user"
                github="https://github.com/attituding/discord-rich-presence"
                name="Discord Rich Presence"
            />
            <Project
                description="FrontendForGPT is an alternative frontend for ChatGPT because SOMEONE wanted to access ChatGPT via the API"
                github="https://github.com/frontend4gpt"
                home="https://gpt.attituding.xyz"
                icon="/frontendforgpt.svg"
                iconAlt="Frontend4GPT icon"
                name="Frontend4GPT"
            />
            <Project
                description="HyGuard was a warning system that alerted users to prevent other nefarious individuals from hijacking their Minecraft account"
                github="https://github.com/attituding/hyguard"
                name="HyGuard"
            />
            <Project
                description="Excel is not a database Excel is not a database Excel is not a database Excel is not a database"
                github="https://github.com/attituding/logans-stupid-excel-database-project"
                name="Logan's Excel Database"
            />
            <Project
                description="PostgreSQL Backup is a utility for backing up small-ish PostgreSQL servers to a Google Drive account"
                github="https://github.com/attituding/postgresql-backup"
                name="PostgreSQL Backup"
            />
        </AutoGrid>
    </Block>
</LayoutNormal>
