---
import AutoGrid from '../components/AutoGrid.astro';
import Block from '../components/Block.astro';
import Project from '../components/Project.astro';
import Text from '../components/Text.astro';
import Title from '../components/Title.astro';
import LayoutNormal from '../layouts/LayoutNormal.astro';
---

<LayoutNormal title="Projects">
    <Block>
        <Title
            heading="1"
            title="Projects"
        />
        <Text>Check out the random stuff I have made</Text>
    </Block>
    <Block>
        <Title
            heading="2"
            title="Cool Projects"
        />
        <AutoGrid
            desktopGap="sm:gap-8"
            desktopGrid="sm:grid-cols-[repeat(auto-fit,minmax(20rem,1fr))]"
            mobileGap="gap-4"
            mobileGrid="grid-cols-[repeat(auto-fit,minmax(10rem,1fr))]"
        >
            <Project
                description="Hypixel News is a work-in-progress bot that sends you the latest news from the Hypixel Network. This project is not affiliated nor associated with Hypixel Inc."
                github="https://github.com/Attituding/hypixel-news"
                home="https://hypixelnews.attituding.live"
                icon="/hypixel-news.svg"
                iconAlt="Hypixel News icon"
                name="Hypixel News"
            />
            <Project
                chrome="https://chrome.google.com/webstore/detail/iris/eoimknngdbibmlhfkkfdjiaonaelahgo"
                description="Iris is a browser extension for Hypixel made to check any Hypixel player's last session easily and quickly. Compatible with Chromium based browsers and Firefox."
                firefox="https://addons.mozilla.org/en-CA/firefox/addon/iris"
                github="https://github.com/Attituding/iris"
                home="https://hypixel.net/threads/browser-extension-iris-a-unique-take-on-a-session-checker.4572237/"
                icon="/iris.svg"
                iconAlt="Iris icon"
                name="Iris"
            />
            <Project
                description="NotifHy is notification bot for Hypixel. Share logins with friends, get reminders to claim daily rewards, and get alerts on suspicious activity."
                github="https://github.com/Attituding/notifhy"
                home="https://notifhy.attituding.live"
                icon="/notifhy.svg"
                iconAlt="NotifHy icon"
                name="NotifHy"
            />
            <Project
                chrome="https://chrome.google.com/webstore/detail/shorts-deflector/gilmponliddppjjcfjmanmmfgiilikhg"
                description="Shorts Deflector is a Chromium and Firefox browser extension that lets you seamlessly play YouTube Shorts with the normal desktop interface."
                firefox="https://addons.mozilla.org/en-CA/firefox/addon/shorts-deflector"
                github="https://github.com/Attituding/shorts-deflector"
                home="https://shortsdeflector.attituding.live"
                icon="/shorts-deflector.svg"
                iconAlt="Shorts Deflector icon"
                name="Shorts Deflector"
            />
        </AutoGrid>
    </Block>
    <Block>
        <Title
            heading="2"
            title="Developer Projects"
        />
        <AutoGrid
            desktopGap="sm:gap-8"
            desktopGrid="sm:grid-cols-[repeat(auto-fit,minmax(20rem,1fr))]"
            mobileGap="gap-4"
            mobileGrid="grid-cols-[repeat(auto-fit,minmax(10rem,1fr))]"
        >
            <Project
                description="PostgreSQL Backup is a utility for backing up small-ish PostgreSQL servers to a Google Drive account."
                github="https://github.com/Attituding/postgresql-backup"
                name="PostgreSQL Backup"
            />
            <Project
                description="A serverless Discord Bot designed for Cloudflare Workers."
                github="https://github.com/Attituding/serverless-discord-bot"
                name="Serverless Discord Bot"
            />
        </AutoGrid>
    </Block>
    <Block>
        <Title
            heading="2"
            title="Deprecated Projects"
        />
        <AutoGrid
            desktopGap="sm:gap-8"
            desktopGrid="sm:grid-cols-[repeat(auto-fit,minmax(20rem,1fr))]"
            mobileGap="gap-4"
            mobileGrid="grid-cols-[repeat(auto-fit,minmax(10rem,1fr))]"
        >
            <Project
                description="An application built around the discord-rpc library to provide custom status message(s) for any desktop Discord user."
                github="https://github.com/Attituding/discord-rich-presence"
                name="Discord Rich Presence"
            />
            <Project
                description="The HyGuard project was created to be a warning system to alert users to prevent other nefarious individuals from hijacking your Minecraft account."
                github="https://github.com/Attituding/hyguard"
                name="HyGuard"
            />
        </AutoGrid>
    </Block>
</LayoutNormal>
