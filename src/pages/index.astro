---
import AutoGrid from '../components/AutoGrid.astro';
import Button from '../components/Button.astro';
import Title from '../components/Title.astro';
import LayoutBasic from '../layouts/LayoutBasic.astro';
---

<LayoutBasic>
    <div class="flex flex-col sm:gap-4 gap-2 max-w-3xl w-full p-4">
        <div
            class="flex h-fit w-full dark:bg-dark-2 bg-light-2 rounded-5xl p-8 justify-center items-center gap-4"
        >
            <img
                alt="Profile picture"
                class="h-16 w-16 rounded-full select-none"
                src="/pfp.webp"
            />
            <Title
                createAnchor={false}
                heading="1"
                title="Attituding"
            />
        </div>
        <AutoGrid
            desktopGap="sm:gap-4"
            desktopGrid="projects-desktop:grid-cols-[repeat(auto-fit,minmax(10rem,1fr))]"
            mobileGap="gap-2"
            mobileGrid="grid-cols-[repeat(auto-fit,minmax(10rem,1fr))]"
        >
            <Button
                href="/projects"
                icon="/project.svg"
                iconAlt="Vector of an icon representing projects"
                target="_self"
                title="Projects"
            />
            <Button
                href="https://github.com/Attituding"
                icon="/mark-github.svg"
                iconAlt="GitHub logo"
                title="GitHub"
            />
            <Button
                href="https://www.youtube.com/channel/UCyI7JXj02uBCPprhTREtRsQ"
                icon="/youtube.svg"
                iconAlt="YouTube logo"
                title="YouTube"
            />
            <Button
                href="mailto:attituding@outlook.com"
                icon="/mail.svg"
                iconAlt="Vector of an icon representing mail"
                title="Contact"
            />
        </AutoGrid>
    </div>
</LayoutBasic>
