---
import AutoGrid from '../components/AutoGrid.astro';
import Button from '../components/Button.astro';
import Title from '../components/Title.astro';
import LayoutBasic from '../layouts/LayoutBasic.astro';
---

<LayoutBasic>
    <div class="flex w-full max-w-4xl flex-col gap-2 p-4 sm:gap-4">
        <div
            class="flex h-fit w-full items-center justify-center gap-4 rounded-5xl bg-light-2 p-8 dark:bg-dark-2"
        >
            <Title
                createAnchor={false}
                heading="1"
                title="Attituding"
            />
        </div>
        <AutoGrid
            desktopGap="sm:gap-4"
            desktopGrid="sm:grid-cols-[repeat(auto-fit,minmax(12rem,1fr))]"
            mobileGap="gap-2"
            mobileGrid="grid-cols-[repeat(auto-fit,minmax(10rem,1fr))]"
        >
            <Button
                href="/projects"
                icon="/project.svg"
                iconAlt="Vector of an icon representing projects"
                target="_self"
                title="Projects"
            />
            <Button
                href="https://github.com/attituding"
                icon="/mark-github.svg"
                iconAlt="GitHub logo"
                title="GitHub"
            />
            <Button
                href="https://www.youtube.com/channel/UCyI7JXj02uBCPprhTREtRsQ"
                icon="/youtube.svg"
                iconAlt="YouTube logo"
                title="YouTube"
            />
            <Button
                href="mailto:attituding@outlook.com"
                icon="/mail.svg"
                iconAlt="Vector of an icon representing mail"
                title="Contact"
            />
        </AutoGrid>
    </div>
</LayoutBasic>
