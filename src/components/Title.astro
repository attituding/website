---
export interface Props {
    anchor?: string;
    heading?: '1' | '2' | '4' | '5' | '6';
}

const { anchor, heading = '2' } = Astro.props as Props;
---

{
    anchor ? (
        <a class="flex flex-row" href={`#${anchor}`} id={anchor}>
            <span class={`h${heading}`}>
                <slot />
            </span>
        </a>
    ) : (
        <span class={`h${heading}`}>
            <slot />
        </span>
    )
}
